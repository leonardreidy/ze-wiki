{
    "name": "ze-wiki",
    "dockerComposeFile": ["../.docker/docker-compose.workspace.yaml", "../.docker/docker-compose.services.yaml"],
    "service": "ze-wiki",
    "forwardPorts": [8080],
    "features": {
      "ghcr.io/devcontainers/features/node:1": {
        "version": "18.17.0",
        "nodeGypDependencies": true
      }
    },
    "initializeCommand": "cat .env > .devcontainer/.env",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "npm install -g npm@latest && npm install -g @devcontainers/cli",
    "customizations": {
      "vscode": {
          "extensions": [
            "dbaeumer.vscode-eslint",
            "EditorConfig.EditorConfig",
            "khan.two-monokai",
            "mads-hartmann.bash-ide-vscode"
          ]
      }
    },
    "runArgs": ["--network=wiki-net"],
    "remoteUser": "node"
  }